<div class='container' id='app'>
  <div class='row'>
    <span class='text-center'><button @click='hitMe'>Hit me!</button></span>

    <h3>Count:</h3>
    {{ count }}
    <h3>My hand:</h3>
    <div v-for='card in hand' class='card col-xs-2 col-sm-1'>
      <div class='row'>
        <div class='col-xs-10 col-xs-offset-1'>
          {{ card.rank }}
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-10 col-xs-offset-1 text-center'>
          <span class='suit'>{{ card.suit }}</span>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-10 col-xs-offset-1 text-right'>
          {{ card.rank }}
        </div>
      </div>
    </div>
  </div>

    <p>
      <h3>Remaining Cards:</h3>
      <span v-for='card in cards'>
        {{ card.rank }}{{ card.suit }}
      </span>
    </p>
  </div>
</div>