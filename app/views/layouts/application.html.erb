<!DOCTYPE html>
<html>
<head>
  <title>Vuepractice</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= Gon::Base.render_data %>
</head>
<body>
<div class='container-fluid'>
  <div class='row'>
    <h1 class='brand'>Uncle Woody's School of Countin' Cards</h1>
    <ul class='nav nav-pills nav-justified'>
      <li class='presentation'><%= link_to 'Home', root_path %></li>
      <% if user_signed_in? %>
        <li class='presentation'><%= link_to 'Edit Account', edit_user_registration_path %></li>
        <li class='presentation'><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <li>Signed in as <%= current_user.email %></li>
      <% else %>
        <li class='presentation'><%= link_to 'Sign In', new_user_session_path %></li>
        <li class='presentation'><%= link_to 'Sign Up', new_user_registration_path %></li>
        <li class='presentation'></li>
      <% end %>
    </ul>
  </div>
</div>
<div id='app' class='container'>
  <div class='row'>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
  <div class='row'>
    <%= yield %>
  </div>
</div>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
